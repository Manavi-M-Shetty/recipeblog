<!-- Categories Start -->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 style=" width: 100px; height: auto;">
  <% if (categories !='' ) { %>
    <% categories.forEach(function(category, index) { %>
      <a href="#" class="col text-center category__link">
        <div class="category__img shadow">
          <img src="img/<%- category.image %>" alt="<%- category.name %>" loading="lazy"
            style="width: 100px; height: auto;">
        </div>
        <div class="pt-1"><%- category.name %></div>
      </a>

      <% }) %>


        <% } %>

          <a href="/categories" class="col text-center category__link">
            <div class="category__img shadow">
              <img src="img/view-all.jpg" alt="View all categories" loading="lazy" style="width: 100px; height: auto;">
            </div>
            <div class="pt-1">View All</div>
          </a>

</div>

<!-- Latest Start -->
<!-- Latest Recipes Section -->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Recipes</h2>
    <a href="/explore-latest" class="ms-auto">View More</a>
  </div>

  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3 justify-content-center">
    <% if (food && food.latest.length> 0) { %>
      <% food.latest.forEach(function(recipe) { %>
        <div class="col">
          <a href="/recipe/<%= recipe._id %>" class="text-decoration-none">
            <div class="card shadow-sm">
              <img src="img/<%= recipe.image %>" class="card-img-top img-fluid" alt="<%= recipe.name %>">
              <div class="card-body text-center">
                <h6 class="card-title fw-bold">
                  <%= recipe.name %>
                </h6>
              </div>
            </div>
          </a>
        </div>
        <% }) %>
          <% } else { %>
            <p class="text-center">No recipes available</p>
            <% } %>
  </div>
</section>




